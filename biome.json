{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": ["**", "!package.json", "!node_modules", "!public", "!dist"]
  },
  "formatter": {
    "formatWithErrors": true,
    "includes": ["**", "!package.json", "!node_modules", "!public", "!dist"],
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!package.json", "!node_modules", "!public", "!dist"],
    "rules": {
      "correctness": {
        "noUnusedImports": {
          "fix": "safe",
          "level": "error"
        },
        "noUnusedVariables": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error"
        }
      },
      "recommended": true,
      "style": {
        "noUnusedTemplateLiteral": {
          "fix": "safe",
          "level": "error"
        },
        "useSelfClosingElements": {
          "fix": "safe",
          "level": "error"
        },
        "useTemplate": {
          "fix": "safe",
          "level": "error"
        }
      },
      "suspicious": {
        "noConsole": "error",
        "noUnknownAtRules": {
          "level": "off",
          "options": {
            "ignore": ["theme"]
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["src/app/globals.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": {
              "level": "off",
              "options": {
                "ignore": ["theme"]
              }
            }
          }
        }
      }
    }
  ]
}
